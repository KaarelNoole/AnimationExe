<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@android:color/transparent"
    android:clickable="false"
    tools:context="MainActivity"
    tools:ignore="ExtraText">//lisasin dp lÃµppu kuna tegu on suurusega - 7 rida

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="189dp"
        android:clickable="false"
        android:contentDescription="@string/sp"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/mario"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_zoom"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="55dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onZoom"
        android:text="@string/zoom"
        android:textIsSelectable="false"
        android:visibility="visible"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/btn_fade"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_clockwise"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onFade"
        android:text="@string/fade"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_blink"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_zoom"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-4dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onBlink"
        android:text="@string/blink"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_move"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clockwise"
        android:layout_alignStart="@+id/btn_clockwise"
        android:layout_alignEnd="@+id/btn_clockwise"
        android:layout_marginEnd="0dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onMove"
        android:text="@string/move"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_slide"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fade"
        android:layout_alignStart="@+id/btn_fade"
        android:layout_marginStart="0dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onSlide"
        android:text="@string/slide"
        android:visibility="visible" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_move"
        android:layout_marginStart="150dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onStop"
        android:text="@string/stop"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_clockwise"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_zoom"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClockwise"
        android:text="@string/clock"
        android:visibility="visible" />

    //lisasin dp lÃµppu

</RelativeLayout>